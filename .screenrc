vbell off # ビジュアルベルを無効
shell bash
autodetach on # 自動でデタッチする
startup_message off
bind w windowlist -b
startup_message off # 起動画面OFF

# ステータス行の設定
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"
# #caption always "%{= wg} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d %{=b wm}%c"

## Ctrl-a U 切り替え
bind U eval "encoding UTF-8"
bind E eval "encoding eucJP"
bind S eval "encoding SJIS"
bind J eval "encoding jis"

# スクロールバッファサイズ
defscrollback 100000
